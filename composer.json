{
  "name": "mistralys/currency-parser",
  "description": "PHP library that can detect prices written in text or markup, and normalise their formatting according to country-specific rules.",
  "minimum-stability": "dev",
  "prefer-stable": true,
  "license": "MIT",
  "authors": [
    {
      "name": "Sebastian Mordziol",
      "email": "s.mordziol@mistralys.eu"
    }
  ],
  "autoload": {
    "files": [
      "src/GlobalFunctions.php"
    ],
    "classmap": [
      "src"
    ]
  },
  "autoload-dev": {
    "classmap": [
      "tests/TestClasses"
      ]
  },
  "require": {
    "mistralys/application-utils": "^2.4",
    "mistralys/application-localization": "^1.4",
    "mistralys/mailcode": "^3.2",
    "php": ">=7.4"
  },
  "require-dev": {
    "roave/security-advisories": "dev-latest",
    "phpstan/phpstan": ">=1.10",
    "phpunit/phpunit": ">=9.6"
  }
}
