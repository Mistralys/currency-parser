<?xml version="1.0" encoding="UTF-8"?>
<phpunit backupGlobals="false"
         backupStaticAttributes="false"
         colors="true"
         convertErrorsToExceptions="true"
         convertNoticesToExceptions="true"
         convertWarningsToExceptions="true"
         processIsolation="false"
         stopOnFailure="false"
         bootstrap="tests/bootstrap.php">
    <testsuites>
        <testsuite name="Currencies">
            <directory suffix=".php">./tests/TestSuites/Currencies</directory>
        </testsuite>
        <testsuite name="Parser">
            <directory suffix=".php">./tests/TestSuites/Parser</directory>
        </testsuite>
        <testsuite name="Formatting">
            <directory suffix=".php">./tests/TestSuites/Formatting</directory>
        </testsuite>
        <testsuite name="Filtering">
            <directory suffix=".php">./tests/TestSuites/Filtering</directory>
        </testsuite>
    </testsuites>
</phpunit>
